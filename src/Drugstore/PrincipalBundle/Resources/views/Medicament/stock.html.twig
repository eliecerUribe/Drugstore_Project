{% extends '::base.html.twig' %}

{% block title %}LaFamácia | Stock{% endblock %}

{% block sidebar %}
<div class="row">
	<div class="large-3 small-8 columns">

	  <img src="{{ asset('zurb.foundation/img/logoo.png') }}" height="350" width="350">

	  <div class="hide-for-small panel">
		<h3>Descripción</h3>
		<h5 class="subheader">Stock, opción que permite visualizar el estado del stock de un medicamento inventariado para tomar medidas preventibas.
		</h5>
	  </div>
	
</div>
{% endblock %}

{% block body %}
<h3>Especificaciones del medicamento <code style="color:#000033;">{{ nombre }}</code>.</h3>
<div class="row">
	<div class="large-6 small-6 columns">
		
		<label>Stock máximo actual:</label> <input type="text" disabled=true value="{{ stock_max }}"><br>
	
		<label>Stock minimo actual:</label> <input type="text" disabled=true value="{{ stock_min }}"><br>
	</div>
</div>
<div class="row">
	<div class="large-8 small-10 columns">
		<label>Estado:</label><br>
		
		<div class="progress radius"><span class="meter" style="width:{{ valor }}; background:{{ color }};"></span></div><br>
		
		<label><b>{{ mensaje }}</b></label><br>
		
		<label><b>Cantidad: {{ cantidad }}</b></label><br>
	</div>
</div>
<div class="row">
	<div class="large-12 small-10 columns">
		<div align=""><a href="{{ path ('drugstore_medicament_setup_stock') }}" class="small button">Buscar otro</a></div><br>
		
		<label>¿Desea configurar el stock de {{ nombre }}?</label><br>
		
		<div align="">
			<a href="{{ url }}" class="small button">Sí</a> <a href="{{ path ('drugstore_principal_homepage') }}" class="small button">No</a>
		</div>
	</div>
</div>

{% endblock %}

